<% title = 'WEPPO Shop' %>

<%- include('partials/head'); %>
<%- include('partials/nav'); %>

<div class="container mt-5">
  <h2>Our Products</h2>
  <div class="row">
    <% products.forEach(function(product) { %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="<%= product.imagePath %>" class="card-img-top" alt="<%= product.name %>"
          style="width: 100%; height: 200px; object-fit: cover;">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">$<%= product.price %></p>
            <div class="d-flex">
              <a href="/product/<%= product.id %>" class="btn btn-primary w-50 me-2">View Details</a>
              <!-- <a href="/add-to-cart/<%= product.id %>" class="btn btn-success w-50">Add to Cart</a> -->
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('partials/end'); %>
